<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Shop</h2>
      </div>
    </div>
  </div>
</div>
<section class="product spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-5">
        <div class="sidebar">
          <div class="sidebar__item">
            <div class="blog__sidebar__search">
              <form action="#">
                <input type="text" placeholder="Search...">
                <button type="submit"><span class="icon_search"></span></button>
              </form>
            </div>
            <h4>Category</h4>
            <ul>
              <li><%= link_to "All", home_shop_path("All") %></li>
              <% Product.distinct.pluck(:category).each do |product|%>
                <li><%= link_to product, home_shop_path(product) %></li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-9 col-md-7">
        <div class="filter__item">
          <div class="row">
            <div class="col-lg-4 col-md-5">
              <div class="filter__sort">
                <%= form_with  url: product_index_path ,local: true do |form| %>
                  <div>
                    <%= form.label "Sort By" ,class:"form-label"%>
                    <%= form.select :category, ["Cost", "Name", "Meats"],{},class:"custom-select" %>
                  </div>
                <%end%>
              </div>
            </div>
            <div class="col-lg-4 col-md-4">
              <div class="filter__found">
                <h6><span><%= @count%></span> Products found</h6>
              </div>
            </div>
            <div class="col-lg-4 col-md-3">
              <div class="filter__option">
                <%= form_with  url: request.referer,method: "GET" ,local: true do |form| %>
                  <div>
                    <%= form.label "Order By" ,class:"form-label"%>
                    <%= form.select @order, ["Ascending", "Descending"],{},{:onchange => 'this.form.submit()',class:"custom-select"} %>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <h1><%= @order%></h1>
          <% @records.each do |product|%>
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg=<%=url_for(product.avatar)%>>
                  <ul class="product__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href=<%="/product/"+product.id.to_s%>><i class="fa fa-shopping-cart"></i></a></li>
                  </ul>
                </div>
                <div class="product__item__text">
                  <h6><a href="#"><%=product.name%></a></h6>
                  <h5>â‚±<%=sprintf('%.2f', product.cost)%></h5>
                </div>
              </div>
            </div>
          <%end%>
        </div>
        <%= pagy_bootstrap_nav(@pagy).html_safe  %>
      </div>
      
    </div>
  </section>
