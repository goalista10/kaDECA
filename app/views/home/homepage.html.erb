  <!-- Title Section Begin -->
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Home</h2>
      </div>
    </div>
  </div>
</div>
<!-- Title Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Featured Products</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <%Product.where(featured: 2).each do |product|%>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg=<%=url_for(product.avatar)%>>
              <ul class="featured__item__pic__hover">
                <li><a href=<%=add_favorite_path(product.id)%>><i class="fa fa-heart"></i></a></li>
                <li><a href=<%="/product/"+product.id.to_s%>><i class="fa fa-shopping-cart"></i></a></li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6><a href="#"><%=product.name%></a></h6>
              <h5>â‚±<%=sprintf('%.2f', product.cost)%></h5>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</section>
<!-- Featured Section End -->
<!-- Blog Section Begin -->
<section class="from-blog spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title from-blog__title">
          <h2>Latest Announcements</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <%Announcement.order(created_at: :desc).limit(3).each do |announcement|%>
        <div class="col-lg-4 col-md-4 col-sm-6">
          <div class="blog__item">
            <div class="blog__item__text">
              <ul>
                <li><i class="fa fa-calendar-o"></i> <%=announcement.created_at.strftime("%b %d, %Y").to_s%></li>
              </ul>
              <h5><%= link_to announcement.title, announcement_path(announcement.id) %></h5>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</section>
<!-- Blog Section End -->
