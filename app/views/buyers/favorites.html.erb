<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Favorites</h2>
      </div>
    </div>
  </div>
</div>
<section class="featured spad">
  <div class="container">
    <div class="row">
      <%@records.each do |product|%>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg=<%=url_for(product.avatar)%>>
              <ul class="featured__item__pic__hover">
                <li><a href=<%=remove_favorite_path(product.id)%>><i class="fa fa-trash"></i></a></li>
                <li><a href=<%="/product/"+product.id.to_s%>><i class="fa fa-shopping-cart"></i></a></li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6><a href="#"><%=product.name%></a></h6>
              <h5>â‚±<%=sprintf('%.2f', product.cost)%></h5>
            </div>
          </div>
        </div>
      <%end%>
    </div>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
  </div>
</section>