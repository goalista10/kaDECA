<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Announcements</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
    <div class="sidebar__item">
      <div class="blog__sidebar__search">
        <%= form_with   url: "/admin/announcements", method: :get ,local: true do |form| %>
        <%= form.text_field :search, placeholder: "Search..." ,class:"form-control" %>
        <%end%>
      </div>
    </div>
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.order(:id).each do |announcement| %>
          <tr>
            <td><%= announcement.title %></td>
            <td><%= announcement.category %></td>
            <td><%= link_to 'View', announcement_path(announcement.id),class:"btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_announcement_path(announcement.id),class:"btn btn-warning" %></td>
            <td><%= link_to 'Remove', announcement_path(announcement.id), method: :delete, data: { confirm: 'Remove category and all its tasks?' } ,class:"btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
    <br/>
    <%= link_to 'Add Announcement', admin_add_announcement_path,class:"btn btn-success" %>
  </div>
</section>