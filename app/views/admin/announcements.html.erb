<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Announcements</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% Announcement.all.order(:id).each do |announcement| %>
          <tr>
            <td><%= announcement.title %></td>
            <td><%= link_to 'View', edit_product_path(announcement.id),class:"btn btn-warning" %></td>
            <td><%= link_to 'Edit', edit_product_path(announcement.id),class:"btn btn-warning" %></td>
            <td><%= link_to 'Remove', product_path(announcement.id), method: :delete, data: { confirm: 'Remove category and all its tasks?' } ,class:"btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Add Announcement', admin_add_announcement_path,class:"btn btn-success" %>
  </div>
</section>