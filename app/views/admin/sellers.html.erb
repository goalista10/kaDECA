<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Sellers</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
  <div class="sidebar__item">
    <div class="blog__sidebar__search">
      <%= form_with   url: "/admin/sellers", method: :get ,local: true do |form| %>
      <%= form.text_field :search, placeholder: "Search..." ,class:"form-control" %>
      <%end%>
    </div>
  </div>
  <table class="table table-hover align-middle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.order(:id).each do |seller| %>
        <tr>
          <td><%= seller.name %></td>
          <td><%= seller.email %></td>
          <td><%= button_to "Delete", admin_seller_delete_path(seller.id), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= pagy_bootstrap_nav(@pagy).html_safe  %>
  </div>
</section>