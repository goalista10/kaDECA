<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Products</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Seller</th>
          <th>Blk</th>
          <th>Lot</th>
          <th>Visible?</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.order(:id).each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.cost %></td>
            <td><%= product.seller.name %></td>
            <td><%= product.seller.blk %></td>
            <td><%= product.seller.lot %></td>
            <td><%= product.featured %></td>
            <td><%= link_to 'View', product_path(product.id),class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
  </div>
</section>