<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Buyers</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.order(:id).each do |buyer| %>
          <tr>
            <td><%= buyer.name %></td>
            <td><%= buyer.email %></td>
            <td><%= button_to "Delete", admin_buyer_delete_path(buyer.id), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
  </div>
</section>