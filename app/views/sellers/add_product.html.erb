<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Add Product</h2>
      </div>
    </div>
  </div>
</div>
<section class="featured spad">
  <div class="container">
    <%= form_with model: @model , url: product_index_path ,local: true do |form| %>
      <div>
        <%= form.label :name ,class:"form-label"%>
        <%= form.text_field :name ,class:"form-control" %>
      </div>
      <div>
        <%= form.label :cost ,class:"form-label"%>
        <%= form.number_field :cost ,step: 0.01,class:"form-control" %>
      </div>
      <div>
        <%= form.label :category ,class:"form-label"%>
        <%= form.select :category, ["Food", "Snacks", "Meats"],{},class:"custom-select" %>
      </div>
      <div>
        <%= form.label :availability ,class:"form-label"%>
        <%= form.select :availability , ["Made upon Order", "Limited", "Daily Restock"],{},class:"custom-select"%>
      </div>
      <div>
        <%= form.label "Picture Upload" ,class:"form-label"%>
        <%= form.file_field :avatar ,class:"form-control-file"%>
      </div>
      <div>
        <%= form.label :description ,class:"form-label"%>
        <%= form.text_area :description  ,class:"form-control", size: "70x5"%>
      </div>
      <br />
      <div>
        <%= form.submit nil ,class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
