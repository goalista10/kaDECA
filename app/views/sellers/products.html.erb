<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Products</h2>
      </div>
    </div>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Category</th>
      <th>Availability</th>
      <th>pic_url</th>
      <th>Description</th>
      <th>seller_id</th>
      <th>product_id</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% current_seller.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.cost %></td>
        <td><%= product.category %></td>
        <td><%= product.availability %></td>
        <td><%= product.pic_url %></td>
        <td><%= product.description %></td>
        <td><%= product.seller_id %></td>
        <td><%= product.id %></td>
        <td><%= link_to 'Edit', edit_product_path(product.id),class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Remove', product_path(product.id), method: :delete, data: { confirm: 'Remove category and all its tasks?' } ,class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Add products</h1>
<%= form_with model: current_seller.products.build , url: product_index_path ,local: true do |form| %>
  <div>
    <%= form.label :name ,class:"form-label"%>
    <%= form.text_field :name  %>
  </div>
  <div>
    <%= form.label :cost ,class:"form-label"%>
    <%= form.number_field :cost ,step: 0.01 %>
  </div>
  <div>
    <%= form.label :category ,class:"form-label"%>
    <%= form.select :category, ["Food", "Snacks", "Meats"] %>
  </div>
  <div>
    <%= form.label :availability ,class:"form-label"%>
    <%= form.select :availability , ["Made upon Order", "Limited", "Daily Restock"]%>
  </div>
  <div>
    <%= form.label :pic_url ,class:"form-label"%>
    <%= form.text_field :pic_url %>
  </div>
  <div>
    <%= form.label :description ,class:"form-label"%>
    <%= form.text_field :description  %>
  </div>
  <div class="actions">
    <%= form.submit nil ,class:"btn btn-primary" %>
  </div>
<% end %>
