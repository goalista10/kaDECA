<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Products</h2>
      </div>
    </div>
  </div>
</div>
<section class="featured spad">
  <div class="container">
    <table class="table table-hover align-middle">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cost</th>
          <th>Category</th>
          <th>Availability</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.order(:id).each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.cost %></td>
            <td><%= product.category %></td>
            <td><%= product.availability %></td>
            <td><%= product.description %></td>
            <td><%= link_to 'View', product_path(product.id),class:"btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_product_path(product.id),class:"btn btn-warning btn-sm" %></td>
            <td><%= link_to 'Remove', product_path(product.id), method: :delete, data: { confirm: 'Remove category and all its tasks?' } ,class:"btn btn-danger btn-sm"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
    <br/>
    <%= link_to 'Add Product', sellers_add_product_path,class:"btn btn-success btn-sm" %>
  </div>
</section>
