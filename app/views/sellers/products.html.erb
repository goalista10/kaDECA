<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2>Products</h2>
      </div>
    </div>
  </div>
</div>

<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Your Products</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="featured__item">
          <div class="featured__item__pic set-bg" data-setbg=<%=url_for(asset_path("product_image.jpg"))%>>
            <ul class="featured__item__pic__hover">
              <li><a href=<%="/sellers/add_product"%>><i class="fa fa-plus"></i></a></li>
            </ul>
          </div>
          <div class="featured__item__text">
            <h6><a href="#">Add Product</a></h6>
            <h5>₱?.??</h5>
          </div>
        </div>
      </div>
      <%@records.order(:id).each do |product|%>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg=<%=url_for(product.avatar)%>>
              <ul class="featured__item__pic__hover">
                <li><a href=<%=product_path(product.id)%>><i class="fa fa-eye"></i></a></li>
                <li><a href=<%=edit_product_path(product.id)%>><i class="fa fa-edit"></i></a></li>
                <li><a href=<%=product_path(product.id)%> data-confirm="Remove product?" rel="nofollow" data-method="delete"><i class="fa fa-trash"></i></a></li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6><a href="#"><%=product.name%></a></h6>
              <h5>₱<%=sprintf('%.2f', product.cost)%></h5>
            </div>
          </div>
        </div>
      <%end%>
    </div>
    <%= pagy_bootstrap_nav(@pagy).html_safe  %>
  </div>
</section>
<!-- Featured Section End -->

