<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="breadcrumb__text">
        <h2><%=@announcement.title %></h2>
      </div>
    </div>
  </div>
</div>
<!-- Blog Section Begin -->
<section class="product spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-5">
        <div class="blog__sidebar">
          <div class="blog__sidebar__search">
            <form action="#">
              <input type="text" placeholder="Search...">
              <button type="submit"><span class="icon_search"></span></button>
            </form>
          </div>
          <div class="blog__sidebar__item">
            <h4>Categories</h4>
            <ul>
              <li><%= link_to "All", home_announcement_path("All") %></li>
                <% Announcement.distinct.pluck(:category).each do |announcement|%>
                <li><%= link_to announcement, home_announcement_path(announcement) %></li>
                <%end%>
              </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8 col-md-7">
        <div class="blog__details__text">
          <p style="white-space: pre-line"><%=@announcement.body %></p>
        </div>
        <div class="blog__details__content">
          <div class="row">
            <div class="col-lg-6">
              <div class="blog__details__widget">
                <ul>
                  <li><span>Category:</span> <%=@announcement.category%></li>
                </ul>
                <div class="blog__details__social">
                  <a href="https://www.facebook.com/groups/dhmpha" target="_blank"><i class="fa fa-facebook"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Blog Section End -->
