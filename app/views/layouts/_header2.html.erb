<!-- Humberger Begin -->
<div class="humberger__menu__overlay"></div>
<div class="humberger__menu__wrapper">
  <div class="humberger__menu__logo">
    <%if admin_signed_in?%>
      <a href="/admin/announcements"><%= image_tag "logo.png" %></a>
    <%elsif seller_signed_in?%>
      <a href="/sellers/products"><%= image_tag "logo.png" %></a>
    <%else%>
      <a href="/"><%= image_tag "logo.png" %></a>
    <%end%>
  </div>
  <div class="humberger__menu__widget">
    <div class="header__top__right__auth">
      <%if buyer_signed_in?%>
        <a href="/buyers/sign_out" data-method="delete"><i class="fa fa-user"></i> Logout</a>
      <% elsif seller_signed_in? %>
        <a href="/sellers/sign_out" data-method="delete"><i class="fa fa-user"></i> Logout</a>
      <% elsif admin_signed_in? %>
        <a href="/admins/sign_out" data-method="delete"><i class="fa fa-user"></i> Logout</a>
      <%else%>
        <a href="/buyers/sign_in"><i class="fa fa-user"></i> Login</a>
      <%end%>
    </div>
  </div>
  <nav class="humberger__menu__nav mobile-menu">
    <%if seller_signed_in?%>
      <ul>
        <li><%= link_to "Products", sellers_products_path %></li>
        <li><%= link_to "Hidden", sellers_hidden_products_path %></li>
      </ul>
    <%elsif admin_signed_in?%>
      <ul>
        <li><%= link_to "Buyers", admin_buyers_path %></li>
        <li><%= link_to "Sellers", admin_sellers_path %></li>
        <li><%= link_to "Products", admin_products_path %></li>
        <li><%= link_to "Announcements", admin_announcements_path %></li>
      </ul>
    <%else%>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Shop", home_shop_path("All") %></li>
        <li><%= link_to "Announcement", home_announcement_path("All") %></li>
        <li><%= link_to "Deca", home_deca_path %></li>
        <%if buyer_signed_in?%>
          <li><%= link_to "Favorites", buyers_favorites_path %></li>
        <%end%>
      </ul>
    <%end%>
  </nav>
  <div id="mobile-menu-wrap"></div>
  <div class="header__top__right__social">
    <%if buyer_signed_in?%>
      <a href="/buyers/edit" ><i class="fa fa-cog"></i> Account</a>
    <% elsif seller_signed_in? %>
      <a href="/sellers/edit"><i class="fa fa-cog"></i> Account</a>
    <%else%>
      <a href="https://www.facebook.com/groups/215617422979575/" target="_blank"><i class="fa fa-facebook"></i></a>
    <%end%>
  </div>
  <div class="humberger__menu__contact">
    <ul>
      <% if buyer_signed_in? %>
        <li><i class="fa fa-envelope"></i> <%= current_buyer.email %>!</li>
        <li>Welcome <%= current_buyer.name %></li>
      <% elsif seller_signed_in? %>
        <li><i class="fa fa-envelope"></i> <%= current_seller.email %>!</li>
        <li>Welcome <%= current_seller.name %></li>
      <% else  %>
        <li><i class="fa fa-shopping-basket"></i> kaDECA, your one place marketplace!</li>
      <%end%>
    </ul>
  </div>
</div>
<!-- Humberger End -->
